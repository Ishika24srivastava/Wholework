package javaprogram;

public class Pyramid {

	public static void main(String[] args) {
		int i,j,n=4;
        String ch="A";
        for(i=1;i<=n;i++)
    {
            
        for(j=1;j<=i;j++)
        {
            System.out.print(j);
            ++ch;
        }
        
        System.out.println();
    }
    }
}
